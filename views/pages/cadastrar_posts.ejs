<!DOCTYPE html>
<html lang="ptbr">

<head>
    <%- include('../partials/head'); %>
</head>

<body class="container">

    <header class="container">
        <%- include('../partials/header'); %>
        <% if(req.session.loggedin) { %>
        <%- include('../partials/menu_dashboard'); %>
        <% } %>
    </header>

    <main class="container">
        <!-- <div class="jumbotron"></div> -->
        <div class="container-sm border border-danger rounded-lg">
            <div class="form-group">
                <h3 style="text-align: center;">Inserir postagem</h3>
                <form action="/cadastrar_posts" method="post">
                    <div class="form-group">
                        <div><label for="titulo">Título da postagem</label></div>
                        <div><input type="text" id="titulo" name="titulo" required class="form-control" value="<%= new Date();%>"></div>
                    </div>
                    <div class="form-group">
                        <div><label for="conteudo">Conteúdo da postagem</label></div>
                        <!-- <div> <input type="text" id="conteudo" name="conteudo" required class="form-control"></div> -->
                        <div><textarea id="conteudo" name="conteudo" rows="10" class="form-control">Teste de postagem</textarea></div>
                    </div>
                    <!-- TODO: Implementar um campo para verificar na página se as senhas coincidem -->
                    <div><button type="submit" class="form-control btn btn-dark">Inserir nova postagem</button></div>
                </form>
            </div>
        </div>
        <div class="fixed-bottom">...</div>
    </main>

    <footer>
        <%- include('../partials/footer'); %>
    </footer>

</body>

</html>